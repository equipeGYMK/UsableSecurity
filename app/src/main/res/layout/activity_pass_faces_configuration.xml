<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pass_faces_configuration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mbpl.graphical.passwords.adminConfiguration.PassFacesConfiguration"
    android:background="@drawable/images_accueil_background">

    <Button
        android:text="Terminer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="47dp"
        android:id="@+id/buttonSubmitPassFace"
        android:layout_alignParentBottom="true"
        android:background="@drawable/border_button_accueil"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Configuration PassFace"
        android:background="#00000000"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/textView2"
        android:gravity="center"
        android:textSize="25sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_width="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Initialiser  le mot de passe"
        android:layout_height="wrap_content"
        android:id="@+id/buttonInitPassFacePassword"
        android:layout_marginBottom="159dp"
        android:layout_above="@+id/buttonSubmitPassFace"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border_button_accueil"
        android:layout_width="230dp" />
</RelativeLayout>
