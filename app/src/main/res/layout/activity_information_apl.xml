<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/lib/mbpl.graphical.passwords"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mbpl.graphical.passwords.androidPatternLock.Information">

    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app2:layout_constraintRight_toRightOf="parent"
        app2:layout_constraintLeft_toLeftOf="parent"
        app2:layout_constraintBottom_toBottomOf="parent"
        app2:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Reliez les points entre eux pour faire une figure"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app2:layout_constraintLeft_toLeftOf="parent"
        app2:layout_constraintTop_toTopOf="parent"
        app2:layout_constraintBottom_toTopOf="@+id/textView6"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app2:layout_constraintRight_toRightOf="parent"
        app2:layout_constraintHorizontal_bias="0.515" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refaite la même figure afin de la confirmer comme figure d'accés"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app2:layout_constraintBottom_toTopOf="@+id/textView7"
        app2:layout_constraintHorizontal_bias="0.0"
        app2:layout_constraintLeft_toLeftOf="parent"
        app2:layout_constraintRight_toRightOf="parent"
        app2:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ou bien recommencez une nouvelle figure avec le bouton RECOMMENCER"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app2:layout_constraintBottom_toTopOf="@+id/textView8"
        app2:layout_constraintLeft_toLeftOf="parent"
        app2:layout_constraintRight_toRightOf="parent"
        app2:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reconnectez vous sur la méthode pour vous identifier avec la figure d'accés que vous avez enregistrée "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app2:layout_constraintBottom_toTopOf="@+id/ok"
        app2:layout_constraintLeft_toLeftOf="parent"
        app2:layout_constraintRight_toRightOf="parent"
        app2:layout_constraintTop_toBottomOf="@+id/textView7" />

</android.support.constraint.ConstraintLayout>