<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/lib/mbpl.graphical.passwords"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images_accueil_background"
    tools:context="mbpl.graphical.passwords.androidPatternLock.Information">

    <Button
        android:id="@+id/ok"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Continuer"
        android:background="@drawable/border_button_global"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app2:layout_constraintRight_toRightOf="parent"
        app2:layout_constraintLeft_toLeftOf="parent"
        app2:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="78dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/titreAndroidPatternLock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explication du Android Pattern Lock"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="22sp"
        android:textStyle="bold"
        app2:layout_constraintHorizontal_bias="0.5"
        app2:layout_constraintLeft_toLeftOf="parent"
        app2:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="102dp" />

    <TextView
        android:id="@+id/explicationAndroidPatternLock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Refaite la même figure afin de la confirmer comme figure d'accés"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app2:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="286dp" />

</android.support.constraint.ConstraintLayout>