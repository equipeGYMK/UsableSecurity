<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mbpl.graphical.passwords.passfaces.Information"
    android:background="@drawable/images_accueil_background">

    <TextView
        android:id="@+id/textEchecApprentissagePassfaces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageViewValidation"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="109dp"
        android:gravity="center"
        android:text="Cliquez sur Nouveau pour générer un nouveau mot de passe et refaire toutes les étapes.\n\nCliquez sur Mémorisation pour accéder à la phase de mémorisation."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.528" />

    <Button
        android:id="@+id/genererNouveau"
        app:layout_constraintHorizontal_bias="0.25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_button_global"
        android:text="Nouveau"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.811"
        app:layout_constraintRight_toLeftOf="@+id/accederMemorisation"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="37dp"
        app:layout_constraintLeft_toLeftOf="parent"
         />


    <Button
        android:id="@+id/accederMemorisation"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_button_global"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="8dp"
        android:text="Phase de mémorisation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.811" />
</android.support.constraint.ConstraintLayout>
